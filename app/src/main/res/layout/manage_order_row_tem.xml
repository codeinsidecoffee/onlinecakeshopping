<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    app:cardElevation="20dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order No: "
                android:textStyle="bold"
                android:textColor="@color/colorAdminPrimaryDark"
                android:textSize="@dimen/product_title_size"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/txtorderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/product_title_size"
                android:paddingLeft="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/customerProfile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/app_icon"
                android:layout_marginLeft="10dp"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customer Name: "
                android:textStyle="bold"
                android:textColor="@color/colorAdminPrimaryDark"
                android:textSize="@dimen/product_price_size"
                android:paddingLeft="10dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/txtCname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="@dimen/product_price_size"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: "
                    android:textStyle="bold"
                    android:textColor="@color/colorAdminPrimaryDark"
                    android:textSize="@dimen/product_text_size"
                    android:paddingLeft="2dp"
                    />
                <TextView
                    android:id="@+id/txtemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/product_text_size"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right"
                android:paddingLeft="10dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile:  "
                    android:textStyle="bold"
                    android:textColor="@color/colorAdminPrimaryDark"
                    android:textSize="@dimen/product_text_size"
                    android:paddingLeft="2dp"
                    />
                <TextView
                    android:id="@+id/txtMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/product_text_size"
                    />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:gravity="left">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Date: "
                    android:textStyle="bold"
                    android:textColor="@color/colorAdminPrimaryDark"
                    android:textSize="@dimen/product_text_size"
                    android:paddingLeft="2dp"
                    />
                <TextView
                    android:id="@+id/txtorderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/product_text_size"
                    android:paddingLeft="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Product:  "
                    android:textStyle="bold"
                    android:textColor="@color/colorAdminPrimaryDark"
                    android:textSize="@dimen/product_text_size"
                    android:paddingLeft="2dp"
                    />
                <TextView
                    android:id="@+id/txtotalproduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/product_text_size"
                    />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:gravity="left">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Amount : "
                    android:textStyle="bold"
                    android:textColor="@color/colorAdminPrimaryDark"
                    android:textSize="@dimen/product_text_size"
                    android:paddingLeft="2dp"
                    />
                <TextView
                    android:id="@+id/txtorderAmt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/product_text_size"
                    android:paddingLeft="5dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Order Status: "
                    android:textStyle="bold"
                    android:textColor="@color/colorAdminPrimaryDark"
                    android:textSize="@dimen/product_text_size"
                    android:paddingLeft="2dp"
                    />
                <TextView
                    android:id="@+id/txtOrderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/product_text_size"
                    />
            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/colorAdminAccent"
            android:layout_marginTop="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/viewProductRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/btnManageOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Order"
            android:textSize="@dimen/product_title_size"
            android:textColor="#fff"
            android:background="@color/colorAdminAccent"
            android:layout_margin="10dp"
            android:padding="10dp"
            />
    </LinearLayout>


</androidx.cardview.widget.CardView>